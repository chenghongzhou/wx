page {
  background: #efeff4;
  line-height: 1;
}

button::after {
  border: none;
}

.box1 {
  width: 100%;
  display: flex;
  height: 236rpx;
  background: #fff;
  flex-direction: column;
}

.box1-t {
  width: 100%;
  height: 88rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e5e5e5;
  font-size: 36rpx;
  color: #333;
  line-height: 88rpx;
}

.box1-b {
  width: 100%;
  height: 148rpx;
  display: flex;
  align-items: center;
}

.box1-b-l {
  width: 118rpx;
  text-align:center;
}

.box1-b-l image {
  width: 88rpx;
  height: 88rpx;
  flex: 1;
}

.box1-b {
  display: flex;
  justify-content: space-between;
}

.box1-b-c view:nth-child(1) {
  font-size: 32rpx;
  color: #333;
  line-height: 32rpx;
}

.box1-b-c view:nth-child(2) {
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
}

.box1-b-c view:nth-child(2) text:nth-child(2) {
  margin: 0 10rpx;
}

.box1-b-d {
  width: 186rpx;
  height: 64rpx;
}

.box1-b-d a {
  display: inline-block;
  border: 1px solid #fa8d35;
  border-radius: 4px;
  width: 126rpx;
  height: 64rpx;
  font-size: 26rpx;
  color: #fa8d35;
  line-height: 64rpx;
  background: #fff;
  text-align: center;
  position: relative;
  right: -30rpx;
}

.box2 {
  background: #fff;
  margin-top: 30rpx;
}

.box2-d {
  display: flex;
  flex-direction: column;
}

.box2-d view {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  box-sizing: border-box; 
  border-bottom: 1px solid #e5e5e5;
}

.box2-d view:last-child {
  border-bottom: none;
}

.box2-d view label {
  font-size: 28rpx;
  color: #999;
}

.box2-d view text {
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
}

.box3 {
  background: #fff;
  margin-top: 30rpx;
}

.box1-t label {
  margin-left: 40rpx;
  font-size: 28rpx;
}

.box1-t label text:first-child {
  font-size: 28rpx;
  color: #fa8d35;
}

.box1-t label text:last-child {
  font-size: 28rpx;
  color: #3f3f3f;
}

.box3-d {
  height: 180rpx;
  width:100%;
}
.box3-d .box3-box{
  width:100%;
  display: flex;
box-sizing: border-box;
}
.box3-img-x {
  width: 100%;
  display: flex;
  padding-left: 30rpx;
}

.box3-img {
  height: 180rpx;
  display: flex;
  align-items: center;
  padding-right: 40rpx;
}

.box3-box view image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 8rpx;
}

.box4 {
  background: #fff;
  height: 140rpx;
  width:100%;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0
}

.box4 button {
  width: 600rpx;
  height: 96rpx;
  border-radius: 4px;
  background: #70b1f2;
  color: #fff;
  font-size: 36rpx;
}
