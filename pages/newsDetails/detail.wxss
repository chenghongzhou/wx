.news-details{
  width: 100%;
  height: auto;
  font-family: 'PingFangSC-Regular';
  box-sizing: border-box;
  padding: 20rpx;
}
.news-details .title{
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}
.sml-panel{
  width:100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  font-size: 30rpx;
}
.sml-panel .timer{
  float: right
}
.content{
  text-indent: 24px;
  font-size: 36rpx;
  color: #333;
  line-height: 70rpx;
}