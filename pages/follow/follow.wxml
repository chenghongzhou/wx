<!--推荐关注-->
<view class='follow-box'>
  <view class="fl-item" wx:for="{{options}}" wx:key="{{index}}">
    <view class="items item-left">
      <image src="{{item.url}}" mode="aspectFit" style="width:100%;height:100%"></image>
    </view>
    <view class="items item-center">
      <text class="descript">{{item.name}}</text>
      <view class="it-tips">
        <text class="position">{{item.position}}</text>
        <text class="position compony">{{item.compony}}</text>
      </view>
    </view>
    <view class="items item-right">
      <text>+ 关注</text>
    </view>
  </view>
</view>